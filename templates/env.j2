# Credentials
{% if ipsec_vpn_docker_psk %}
## PSK
VPN_IPSEC_PSK={{ ipsec_vpn_docker_psk }}
{% endif %}
{% if ipsec_vpn_docker_user %}
## User
VPN_USER={{ ipsec_vpn_docker_user }}
{% endif %}
{% if ipsec_vpn_docker_password %}
## Password
VPN_PASSWORD={{ ipsec_vpn_docker_password }}
{% endif %}

# Additional credentials
{% if ipsec_vpn_docker_additional_user_list %}
## User list
VPN_ADDL_USERS={{ ipsec_vpn_docker_additional_user_list }}
{% endif %}
## Password List
{% if ipsec_vpn_docker_additional_password_list %}
VPN_ADDL_PASSWORDS={{ ipsec_vpn_docker_additional_password_list }}
{% endif %}

# DNS
{% if ipsec_vpn_docker_dns_name %}
## DNS name
VPN_DNS_NAME={{ ipsec_vpn_docker_dns_name }}
{% endif %}
{% if ipsec_vpn_docker_dns_server_1 %}
VPN_DNS_SRV1={{ ipsec_vpn_docker_dns_server_1 }}
{% endif %}
{% if ipsec_vpn_docker_dns_server_2 %}
VPN_DNS_SRV2={{ ipsec_vpn_docker_dns_server_2 }}
{% endif %}

# IKEv2 vars
{% if ipsec_vpn_docker_ikev2_client_name %}
VPN_CLIENT_NAME={{ ipsec_vpn_docker_ikev2_client_name }}
{% endif %}
{% if ipsec_vpn_docker_ikev2_protect_config == 'yes' %}
VPN_PROTECT_CONFIG=yes
{%endif%}